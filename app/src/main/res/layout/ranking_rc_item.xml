<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_marginTop="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

   <ImageView
       android:id="@+id/ranking_img"
       android:src="@drawable/ranking_one"
       android:layout_gravity="center"
       android:layout_marginLeft="22dp"
       android:layout_width="45dp"
       android:layout_height="35dp"/>

    <TextView
        android:visibility="gone"
        android:id="@+id/ranking_text"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_marginLeft="22dp"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_width="40dp"
        android:layout_height="40dp"/>

    <com.qzy.spinning.layout.CircleImageView
        android:id="@+id/ranking_photo"
        android:layout_marginLeft="42dp"
        android:layout_gravity="center"
        android:layout_width="45dp"
        android:layout_height="35dp"/>

    <TextView
        android:id="@+id/name"
        android:text="雨晨念空"
        android:textSize="19sp"
        android:textColor="@color/white"
        android:layout_marginLeft="18dp"
        android:gravity="center_vertical"
        android:layout_width="110dp"
        android:layout_height="35dp"/>

    <ImageView
        android:layout_marginLeft="56dp"
        android:src="@drawable/ranking_kcal"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_width="25dp"
        android:layout_height="15dp"/>

    <TextView
        android:id="@+id/ranking_consume"
        android:text="100 kcal"
        android:textColor="@color/white"
        android:textSize="19sp"
        android:layout_marginLeft="6dp"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="29dp"/>

</LinearLayout>
