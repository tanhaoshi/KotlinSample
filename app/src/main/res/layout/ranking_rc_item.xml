<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

   <ImageView
       android:id="@+id/ranking_img"
       android:src="@drawable/ranking_one"
       android:layout_gravity="center"
       android:layout_width="30dp"
       android:layout_height="20dp"/>

    <TextView
        android:visibility="gone"
        android:id="@+id/ranking_text"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_width="30dp"
        android:layout_height="20dp"/>

    <com.qzy.spinning.layout.CircleImageView
        android:id="@+id/ranking_photo"
        android:layout_marginLeft="12dp"
        android:layout_gravity="center"
        android:layout_width="25dp"
        android:layout_height="20dp"/>

    <TextView
        android:id="@+id/name"
        android:text="雨晨念空"
        android:textSize="8sp"
        android:textColor="@color/white"
        android:layout_marginLeft="6dp"
        android:gravity="center_vertical"
        android:layout_width="70dp"
        android:layout_height="29dp"/>

    <TextView
        android:id="@+id/ranking_consume"
        android:text="100 kcal"
        android:textColor="@color/white"
        android:textSize="10sp"
        android:drawableLeft="@drawable/ranking_kcal"
        android:drawablePadding="6dp"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="29dp"/>

</LinearLayout>
