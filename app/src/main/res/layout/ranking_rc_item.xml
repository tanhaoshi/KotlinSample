<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="45dp">

   <ImageView
       android:id="@+id/ranking_img"
       android:src="@drawable/ranking_one"
       android:layout_gravity="center"
       android:layout_width="40dp"
       android:layout_height="30dp"/>

    <TextView
        android:visibility="gone"
        android:id="@+id/ranking_text"
        android:text="8"
        android:gravity="center"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_width="40dp"
        android:layout_height="30dp"/>

    <ImageView
        android:id="@+id/ranking_photo"
        android:layout_marginLeft="24dp"
        android:layout_gravity="center"
        android:layout_width="50dp"
        android:layout_height="30dp"/>

    <TextView
        android:id="@+id/name"
        android:text="雨晨念空"
        android:textSize="8sp"
        android:layout_marginLeft="6dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="30dp"/>

    <TextView
        android:id="@+id/ranking_consume"
        android:text="100 kcal"
        android:layout_marginLeft="16dp"
        android:textSize="10sp"
        android:drawableLeft="@drawable/ranking_kcal"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="30dp"/>

</LinearLayout>