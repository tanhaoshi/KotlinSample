<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="158dp"
    android:layout_height="154dp">

    <TextView
        android:id="@+id/name_of_one"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:text="雨晨念安"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="21dp"/>

    <cbox.yunkang.com.c_box.layout.CircleImageView
        android:id="@+id/photo_of_one"
        android:src="@drawable/a1"
        android:layout_marginTop="18dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name_of_one"
        android:layout_width="85dp"
        android:layout_height="85dp"/>

    <ImageView
        android:id="@+id/run_of_one"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/photo_of_one"
        android:layout_marginTop="40dp"
        android:src="@drawable/running"
        android:layout_width="28dp"
        android:layout_height="24dp"/>

    <TextView
        android:id="@+id/run_value_one"
        app:layout_constraintTop_toBottomOf="@+id/run_of_one"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="4dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:textStyle="bold"
        android:text="5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/unit"
        app:layout_constraintTop_toBottomOf="@+id/run_of_one"
        android:layout_marginTop="12dp"
        app:layout_constraintLeft_toRightOf="@+id/run_value_one"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:text="spm"
        android:gravity="bottom"
        android:layout_width="wrap_content"
        android:layout_height="22dp"/>

    <ImageView
        android:id="@+id/run_of_two"
        app:layout_constraintLeft_toRightOf="@+id/run_of_one"
        android:layout_marginLeft="70dp"
        app:layout_constraintTop_toBottomOf="@+id/photo_of_one"
        android:layout_marginTop="40dp"
        android:src="@drawable/consume"
        android:layout_width="28dp"
        android:layout_height="24dp"/>

    <TextView
        android:id="@+id/run_value_two"
        app:layout_constraintTop_toBottomOf="@+id/run_of_one"
        android:layout_marginTop="6dp"
        app:layout_constraintLeft_toRightOf="@+id/unit"
        android:layout_marginLeft="32dp"
        android:textColor="@color/white"
        android:text="96"
        android:textStyle="bold"
        android:textSize="22sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/unit_two"
        app:layout_constraintTop_toBottomOf="@+id/run_of_one"
        android:layout_marginTop="12dp"
        app:layout_constraintLeft_toRightOf="@+id/run_value_two"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:text="kcal"
        android:gravity="bottom"
        android:layout_width="wrap_content"
        android:layout_height="22dp"/>

    <ImageView
        android:id="@+id/run_of_three"
        app:layout_constraintLeft_toRightOf="@+id/run_value_two"
        android:layout_marginLeft="94dp"
        app:layout_constraintTop_toBottomOf="@+id/photo_of_one"
        android:layout_marginTop="40dp"
        android:src="@drawable/beat"
        android:layout_width="28dp"
        android:layout_height="24dp"/>

    <TextView
        android:id="@+id/run_value_three"
        app:layout_constraintTop_toBottomOf="@+id/run_of_three"
        android:layout_marginTop="6dp"
        app:layout_constraintLeft_toRightOf="@+id/unit_two"
        android:layout_marginLeft="55dp"
        android:textColor="@color/white"
        android:text="96"
        android:textStyle="bold"
        android:textSize="22sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/unit_three"
        app:layout_constraintTop_toBottomOf="@+id/run_of_three"
        android:layout_marginTop="12dp"
        app:layout_constraintLeft_toRightOf="@+id/run_value_three"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:text="bpm"
        android:gravity="bottom"
        android:layout_width="wrap_content"
        android:layout_height="22dp"/>

</android.support.constraint.ConstraintLayout>