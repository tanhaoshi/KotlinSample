<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/course_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mvp.ui.activity.SplashActivity">


    <android.support.constraint.ConstraintLayout
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/bike"
            android:textColor="@color/white"
            android:text="@string/bike_select"
            app:layout_constraintRight_toLeftOf="@+id/roam"
            android:textSize="30sp"
            android:layout_marginRight="40dp"
            android:background="@drawable/splash_bg"
            android:gravity="center"
            android:layout_width="345dp"
            android:layout_height="251dp"/>

        <TextView
            android:id="@+id/roam"
            app:layout_constraintLeft_toRightOf="@+id/bike"
            android:textColor="@color/white"
            android:layout_marginLeft="40dp"
            android:text="@string/roam_select"
            android:textSize="30sp"
            android:background="@drawable/splash_bg"
            android:gravity="center"
            android:layout_width="345dp"
            android:layout_height="251dp"/>

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>